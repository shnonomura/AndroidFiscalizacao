<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


        <TextView
            android:id="@+id/textOs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/os"
            android:textSize="18sp"
            android:padding="4sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contrato"
            android:textSize="14sp"
            android:padding="4sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkAnalisada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:checked="false"
                    android:text="Analisada"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkFiscalizada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Fiscalizada"
                    android:textSize="12sp" />
        </LinearLayout>


</LinearLayout>